<div class="container">
  <h1 class="my-4">Checkout</h1>

  <%= form_with(model: @order, url: orders_path, method: :post, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :street %>
      <%= form.text_field :street, class: 'form-control', required: true %>
    </div>

    <div class="form-group">
      <%= form.label :province %>
      <%= form.select :province, options_for_select(['BC', 'ON', 'QC', 'AB', 'MB', 'SK', 'NB', 'NS', 'PE', 'NL', 'NT', 'YT', 'NU'], @order.province), {}, class: 'form-select', required: true %>
    </div>

    <div class="form-group">
      <%= form.label :total_amount %>
      <%= form.number_field :total_amount, value: @cart.total_price, readonly: true, class: 'form-control' %>
    </div>

    <%= form.submit 'Place Order', class: 'btn btn-primary' %>
  <% end %>
</div>
